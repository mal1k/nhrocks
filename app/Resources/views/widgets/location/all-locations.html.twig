<div class="categories-base" data-type="4" scrollable="false" data-bg="{{ content.backgroundColor }}" has-gap>
    <div class="container">
        <div class="categories-header">
            <h1 class="heading h-4" data-trans="{{ 'Explore All Classifieds Locations'|trans({}, 'widgets') }}"
                data-trans="{{ 'Explore All Listings Locations'|trans({}, 'widgets') }}"
                data-trans="{{ 'Explore All Events Locations'|trans({}, 'widgets') }}"
                data-trans="{{ 'Explore All Deal Locations'|trans({}, 'widgets') }}">
                {{ content.labelExploreAllLocations|trans({},'widgets') }}
            </h1>
        </div>

        {% if locations -%}
            <div class="categories-content">
                {% for id, location in locations -%}
                    <div class="toggle-item">
                        <div class="toggle-header">
                            <a href="{{ location.item.friendlyUrl }}" class="heading h-3 link toggle-title">
                                {{ location.item.name }}
                            </a>
                            {% if location.children -%}
                                <button class="button more-info" data-parent="location" data-itemId="{{ location.item.id }}" data-level="{{ location.level }}" data-friendlyUrl="{{ location.item.friendlyUrl }}" href="#{{ location.item.id ~ '-' ~ location.level }}">
                                    <span class="fa fa-angle-right"></span>
                                </button>
                            {% endif -%}
                        </div>
                        {% if location.children -%}
                            <div class="toggle-content">
                                <div class="nav-wrapper"></div>
                            </div>
                        {% endif -%}
                    </div>
                {% endfor -%}
            </div>
        {% endif -%}
    </div>
</div>

{{ addJSTwig("::js/blocks/all-locations.html.twig") }}
