<link rel="preconnect" href="https://fonts.gstatic.com/">
{%- if paragraphFont is not empty -%}
    <link rel="preload" href="https://fonts.googleapis.com/css?display=swap&family={{ paragraphFont|replace(' ', '+') }}" as="style">
    <link href="https://fonts.googleapis.com/css?display=swap&family={{ paragraphFont|replace(' ', '+') }}" rel="stylesheet">
{% else %}
    <link rel="preload" href="https://fonts.googleapis.com/css?display=swap&family=Roboto:100,300,400,500,700,900" as="style">
    <link href="https://fonts.googleapis.com/css?display=swap&family=Roboto:100,300,400,500,700,900" rel="stylesheet">
{% endif %}
{%- if headingFont is not empty -%}
    <link rel="preload" href="https://fonts.googleapis.com/css?display=swap&family={{ headingFont|replace(' ', '+') }}" as="style">
    <link href="https://fonts.googleapis.com/css?display=swap&family={{ headingFont|replace(' ', '+') }}" rel="stylesheet">
{% else %}
    <link rel="preload" href="https://fonts.googleapis.com/css?display=swap&family=Rubik:300,400,500,700,900" as="style">
    <link href="https://fonts.googleapis.com/css?display=swap&family=Rubik:300,400,500,700,900" rel="stylesheet">
{% endif %}

<style>
    :root{
        {{ colorBlock }}
        {%- if paragraphFontName is not empty -%}
            --paragraph-font: '{{ paragraphFontName }}';
            --font-family-base: '{{ paragraphFontName }}';
        {%- endif -%}
        {%- if headingFontName is not empty -%}
            --heading-font: '{{ headingFontName }}';
        {%- endif -%}
    }
</style>